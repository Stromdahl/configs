#!/bin/bash

workmode_on() {
    bash /home/ms/.screenlayout/work.sh
}

workmode_work() {
    bash /home/ms/.screenlayout/work2.sh
    i3-msg [workspace=1] move workspace to output DisplayPort-1
    i3-msg [workspace=2] move workspace to output DisplayPort-1
    i3-msg [workspace=3] move workspace to output DisplayPort-1
    i3-msg [workspace=4] move workspace to output DisplayPort-1
    i3-msg [workspace=5] move workspace to output DisplayPort-1
    i3-msg [workspace=6] move workspace to output DisplayPort-1
    i3-msg [workspace=7] move workspace to output HDMI-A-0
    i3-msg [workspace=8] move workspace to output DisplayPort-1
    i3-msg [workspace=9] move workspace to output DisplayPort-1
    i3-msg [workspace=0] move workspace to output DisplayPort-1
    i3-msg workspace 7
}

workmode_off() {
    bash /home/ms/.screenlayout/laptop.sh
}

workmode_home() {
    bash /home/ms/.screenlayout/home.sh
}

# run always
bash /home/ms/.dotfiles/configs/miscelanius/xsessionrc

case "$1" in
    on)
        workmode_on
        ;;
    work)
        workmode_work
        ;;
    off)
        workmode_off
        ;;
    home)
        workmode_home
        ;;
    *)
        echo "Usage: $0 {on | work | off | home}"
        exit 2
esac

exit 0
